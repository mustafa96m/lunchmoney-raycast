{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "lunchmoney",
    "title": "Lunch Money",
    "description": "Lunch Money is a personal finance app that helps you track your spending, manage your budget, and reach your financial goals.",
    "icon": "icon.png",
    "author": "mustafa",
    "license": "MIT",
    "commands": [
        {
            "name": "index",
            "title": "Browse",
            "description": "Browse your transactions",
            "mode": "view"
        },
        {
            "name": "add-expense",
            "title": "Add Expense",
            "description": "Quickly add a new expense",
            "mode": "view"
        },
        {
            "name": "add-income",
            "title": "Add Income",
            "description": "Quickly add new income",
            "mode": "view"
        },
        {
            "name": "view-sms",
            "title": "SMS",
            "description": "View latest SMS messages",
            "mode": "view"
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.83.4",
        "@raycast/utils": "^1.18.0",
        "axios": "^1.7.7"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "16.10.3",
        "@types/react": "18.3.2",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^29.7.0",
        "prettier": "^2.5.1",
        "ts-jest": "^29.1.2",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "publish": "ray publish",
        "lint": "ray lint",
        "format": "ray format"
    },
    "preferences": [
        {
            "name": "LUNCH_MONEY_API_KEY",
            "type": "password",
            "required": true,
            "title": "Lunch Money API Key",
            "description": "Your Lunch Money API key"
        },
        {
            "name": "DEFAULT_CURRENCY",
            "type": "textfield",
            "default": "USD",
            "title": "Default Currency",
            "description": "Select your preferred default currency for displaying amounts.",
            "required": true
        }
    ],
    "categories": [
        "Finance"
    ],
    "version": "1.0.0",
    "keywords": [
        "finance",
        "budget",
        "transactions",
        "money",
        "lunch money",
        "lunchmoney",
        "personal finance"
    ],
    "repository": "https://github.com/mustafa96m/raycast-lunchmoney",
    "bugs": {
        "url": "https://github.com/mustafa96m/raycast-lunchmoney/issues"
    }
}
